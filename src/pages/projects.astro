---
import PageLayout from "@/layouts/Base.astro";
import PortfolioTabs from "@/components/PortfolioTabs.astro";

const meta = {
  description: "A showcase of Mohamed El-Refai's software development and graphic design work",
  title: "Portfolio | Mohamed El-Refai",
};
---

<PageLayout meta={meta}>
  <h1 class="title mb-6">My Work</h1>
  <p class="mb-8">
    A collection of my software development projects and graphic design work
  </p>
  
  <div class="mt-8">
    <PortfolioTabs />
  </div>

  <style>
    /* Add smooth scrolling for anchor links */
    html {
      scroll-behavior: smooth;
    }
    
    /* Smooth hover transitions */
    a, button {
      transition: opacity 0.2s ease, color 0.2s ease, border-color 0.2s ease;
    }
    
    /* Animation for content */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
      animation: fadeIn 0.4s ease-out forwards;
    }
    
    /* Responsive grid adjustments */
    @media (max-width: 639px) {
      .sm\:grid-cols-2 {
        grid-template-columns: repeat(1, minmax(0, 1fr));
      }
    }
  </style>
</PageLayout>
