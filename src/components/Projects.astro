---
import type { Project } from "@/data/projects";

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="space-y-16">
  {
    projects.map((project) => (
      <div class="group">
        <div class="flex flex-col gap-2">
          <div class="flex items-center gap-4">
            <h2 class="text-2xl font-semibold text-[color:var(--color-global-text)]">
              {project.title}
            </h2>
            <a 
              href={project.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[color:var(--color-global-text)] opacity-50 hover:opacity-100 transition-opacity"
              aria-label={`View ${project.title} on GitHub`}
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.30 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          </div>
          
          <p class="text-sm text-[color:var(--color-global-text)] opacity-70">
            {project.date}
          </p>
          
          <p class="mt-2 text-[color:var(--color-global-text)]">
            {project.description}
          </p>
          
          {project.media && (
            <div class="mt-4 w-full max-w-md rounded overflow-hidden">
              {project.media.type === 'image' ? (
                <img
                  src={project.media.url}
                  alt={project.media.alt || project.title}
                  class="w-full h-auto rounded"
                  loading="lazy"
                />
              ) : (
                <video 
                  src={project.media.url}
                  class="w-full h-auto rounded"
                  controls
                  muted
                  preload="metadata"
                  aria-label={project.media.alt || `Demo of ${project.title}`}
                >
                  Your browser does not support the video tag.
                </video>
              )}
            </div>
          )}
          
          {project.tags && project.tags.length > 0 && (
            <div class="mt-3 flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="text-xs text-[color:var(--color-global-text)] opacity-60">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
        
        {project !== projects[projects.length - 1] && (
          <hr class="mt-8 border-t border-[color:var(--color-global-text)] border-opacity-10" />
        )}
      </div>
    ))
  }
</div>
